generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Cart {
  id            Int        @id
  userId        Int
  date          DateTime
  totalQuantity Int
  updatedAt     DateTime   @updatedAt
  items         CartItem[]
}

model CartItem {
  id        Int  @id @default(autoincrement())
  cartId    Int
  productId Int
  quantity  Int

  cart Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId])
  @@index([cartId])
}
